<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".Addcar">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Car"
        android:textColor="#101010"
        android:textSize="25dp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="101dp" />


    <EditText
        android:id="@+id/car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your car"
        android:background="#fff"
        android:textColor="@color/black"
        android:textColorHint="#878787"
        android:backgroundTint="@color/white"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:layout_marginBottom="10dp" />


    <EditText
        android:id="@+id/seat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Seat"
        android:textColor="@color/black"
        android:textColorHint="#878787"
        android:backgroundTint="@color/white"
        android:inputType="number"
        android:background="#fff"
        android:padding="12dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Register No:"
        android:textColor="@color/black"
        android:background="#fff"
        android:textColorHint="#878787"
        android:backgroundTint="@color/white"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/splace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Starting Place"
        android:textColor="@color/black"
        android:background="#fff"
        android:textColorHint="#878787"
        android:backgroundTint="@color/white"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:layout_marginBottom="10dp" />
    <EditText
    android:id="@+id/eplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Ending Place"
        android:textColor="@color/black"
        android:background="#fff"
        android:textColorHint="#878787"
        android:backgroundTint="@color/white"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:layout_marginBottom="10dp" />




    <Button
        android:id="@+id/actbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:text="submit"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="611dp" />

    <TextView
        android:id="@+id/addcamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="View Car"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="101dp" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp" />

</LinearLayout>